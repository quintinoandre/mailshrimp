{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDirs": ["./src/", "../__commons__/src"],
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@controllers/*": ["./src/controllers/*","../accounts-service/src/controllers/*"],
			"@models/*": ["./src/models/*","../accounts-service/src/models/*"],
			"@routes/*": ["./src/routes/*","../accounts-service/src/routes/*"],
			"@ms-commons/*": ["../__commons__/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["__tests__"]
}
